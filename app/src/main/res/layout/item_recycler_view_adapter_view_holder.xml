<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ItemRecyclerViewAdapterViewHolder_Iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/_default" />

    <TextView
        android:id="@+id/ItemRecyclerViewAdapterViewHolder_Tv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/ItemRecyclerViewAdapterViewHolder_Tv1"
        app:layout_constraintEnd_toStartOf="@+id/ItemRecyclerViewAdapterViewHolder_BrVr2"
        app:layout_constraintStart_toEndOf="@+id/ItemRecyclerViewAdapterViewHolder_BrVr1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ItemRecyclerViewAdapterViewHolder_Tv2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/ItemRecyclerViewAdapterViewHolder_Tv2"
        app:layout_constraintEnd_toStartOf="@+id/ItemRecyclerViewAdapterViewHolder_BrVr2"
        app:layout_constraintStart_toEndOf="@+id/ItemRecyclerViewAdapterViewHolder_BrVr1"
        app:layout_constraintTop_toBottomOf="@+id/ItemRecyclerViewAdapterViewHolder_Tv1" />

    <CheckBox
        android:id="@+id/ItemRecyclerViewAdapterViewHolder_Cb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/ItemRecyclerViewAdapterViewHolder_BrVr1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="ItemRecyclerViewAdapterViewHolder_Iv1"
        tools:layout_editor_absoluteX="411dp" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/ItemRecyclerViewAdapterViewHolder_BrVr2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="ItemRecyclerViewAdapterViewHolder_Cb1"
        tools:layout_editor_absoluteX="411dp" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/ItemRecyclerViewAdapterViewHolder_BrHr1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="ItemRecyclerViewAdapterViewHolder_Iv1,ItemRecyclerViewAdapterViewHolder_Tv2,ItemRecyclerViewAdapterViewHolder_Cb1"
        tools:layout_editor_absoluteY="731dp" />

</androidx.constraintlayout.widget.ConstraintLayout>